<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_margin="5dp"
    android:layout_height="250dp"
    card_view:cardCornerRadius="5sp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_card"
            android:background="@drawable/libros"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nomProd"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:text="Producto"
            android:textColor="@color/Title"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cat_precioProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5sp"
            android:gravity="center"
            android:text="$0.00"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_cat_prod"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <Button
            android:id="@+id/button_AnadirCarrito1"
            android:layout_width="140dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:background="@drawable/button_redondo_registro"
            android:onClick="AddProd"
            android:text="AÃ±adir al carrito"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    </androidx.cardview.widget.CardView>