<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:layout_margin="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView_Producto2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/huawie1"
            android:layout_marginVertical="10dp"/>
        <TextView
            android:id="@+id/editText_Descripcion2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Celular Huawei P20 Lite Pantalla Full HD / Memoria interna de 32 GB"
            android:textAlignment="center"
            android:textColor="#747474"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.651" />
        <TextView
            android:id="@+id/textView_PrecioDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="$5,000.00"
            android:textAlignment="center"
            android:textColor="#747474"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />
        <Button
            android:layout_gravity="center"
            android:background="@drawable/button_redondo2"
            android:id="@+id/button_Eliminar"
            android:layout_width="180dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="ELIMINAR"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.767" />
    </LinearLayout>
</androidx.cardview.widget.CardView>